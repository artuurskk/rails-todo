<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center">Log in</h2>
      <% if alert %>
      <div id="alert" class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
      <% end %>

      <%= form_tag sessions_path do |form| %>
        <div class="form-group">
          <%= label_tag :email, 'Email: ' %>
          <%= text_field_tag :email, params[:email], size: 40,  class:"form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Password: ' %>
          <%= password_field_tag :password,params[:password], size: 40,  class:"form-control" %>
        </div>
        <div class="form-group">
          <div class="actions">
            <%= submit_tag 'Login', class:"form-control btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>